<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imgkk"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/kk" />

        <TextView
            android:id="@+id/tvwdkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgkk"
            android:text="账号分享设置"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@android:color/background_light"
        android:layout_marginTop="15dp"
        >
        
        <ImageView
            android:id="@+id/imgxl"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@mipmap/xinlang"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tvxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/imgxl"
            android:layout_marginTop="18dp"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:src="@mipmap/bangd"
            android:layout_toRightOf="@+id/tvxl"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="8dp"
            />
        <View
            android:id="@+id/ve"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_below="@+id/tvxl"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:id="@+id/imgx2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@mipmap/tengxwb"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/ve"
            />
        <TextView
            android:id="@+id/tvx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="腾讯微博"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/imgxl"
            android:layout_below="@+id/ve"
            android:layout_marginTop="18dp"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:src="@mipmap/bangd"
            android:layout_toRightOf="@+id/tvxl"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/ve"
            />

    </RelativeLayout>
</LinearLayout>