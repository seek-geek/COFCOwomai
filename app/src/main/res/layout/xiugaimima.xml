<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imgkk"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/kk" />

        <TextView
            android:id="@+id/tvwdkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgkk"
            android:text="修改密码"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_marginLeft="17dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        >
<TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="原密码"
    android:textColor="@android:color/background_dark"
    android:textSize="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    />
<EditText
    android:id="@id/et"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@null"
    android:text=""
    android:layout_toRightOf="@+id/tv1"
    android:layout_marginTop="8dp"
    />
        <View
            android:id="@+id/ve"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui"
            android:layout_below="@+id/et"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/ve"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:text="密码长度必须为8-16个字符"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/tv2"
            android:layout_below="@+id/ve"
            android:layout_marginTop="8dp"
            />
        <View
            android:id="@+id/ve1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui"
            android:layout_below="@+id/et2"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/ve1"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:text="  请再输入登录密码"

            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/tv3"
            android:layout_below="@+id/ve1"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvmima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码必须包含2个字母和2个数字的组合"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            />
<ImageView
    android:layout_width="348dp"
    android:layout_height="36dp"
    android:src="@mipmap/baochunt"
    android:layout_below="@+id/tvmima"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="17dp"
    />
    </RelativeLayout>
</LinearLayout>