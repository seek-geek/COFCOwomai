<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/imgkk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="取消"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvwdkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgkk"
            android:text="意见反馈"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imgxl"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/zhuti" />

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgxl"
            android:background="@null"
            android:text="请输入主题"
            android:textSize="15dp" />

        <View
            android:id="@+id/ve"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imgxl2"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ve"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/liuyan" />
        <EditText
            android:id="@+id/et2"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imgxl"
            android:background="@null"
            android:text="您的意见是我们不断改进的动力，请留下您在使用过程中遇到的问题或提出宝贵的建议"
            android:layout_below="@+id/ve"
            android:gravity="clip_vertical"
            android:textSize="15dp" />
        <View
            android:id="@+id/ve2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et2"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />
        <ImageView
            android:id="@+id/imgxl3"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ve2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/lianxiwm" />
        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgxl3"
            android:background="@null"
            android:text="请输入手机号或者邮箱"
            android:layout_below="@id/ve2"
            android:textSize="15dp" />
        <View
            android:id="@+id/ve3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/et3"
            android:layout_marginTop="5dp"
            android:background="@color/hui" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="18dp"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/ve3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ve3"
            android:layout_toRightOf="@+id/tv"
            android:background="@null"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="359dp"
            android:layout_height="42dp"
            android:src="@mipmap/tijiao"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>
</LinearLayout>